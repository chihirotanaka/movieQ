<h2>ユーザー登録</h2>
<p>ユーザー登録してクイズを作成しよう！</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="label">name</label><br />
    <%= f.text_field :name, autofocus: true, placeholder:"ニックネーム"%>
  </div>

  <div class="field">
    <label class="label">email</label><br />
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <label class="label">password</label><br />
    <%= f.password_field :password, placeholder:"パスワード", autocomplete: "off" %>
  </div>

  <div class="field">
    <label class="label">password_confirmation</label><br />
    <%= f.password_field :password_confirmation, placeholder:"パスワード確認", autocomplete: "off"%>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
